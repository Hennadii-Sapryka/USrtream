@using Umbraco.Cms.Web.Common.PublishedModels;

@model BlogPost

@{

}

<a href="@Model.Url()" class="blog-post-card">
    <img class="blog-post-card-thumbnail" src="@Model.Image?.GetCropUrl()" />
    <div class="blog-post-card-header">
        <div class="blog-category">@Model.Category</div>
        <span class="blog-post-details">@Model.CreateDate.ToString("dd.mm.yyyy")</span>
    </div>
    <div class="blog-post-card-title">@Model.Name</div>
</a>
